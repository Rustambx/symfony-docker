{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <!-- Post Content Column -->
            <div class="col-lg-10">
                <!-- Title -->
                <h1 class="mt-4">{{ post.title }}</h1>
                <!-- Author -->
                <p class="lead">
                    by
                    <a href="#">{{ post.author.email }}</a>
                </p>
                <hr>
                <!-- Date/Time -->
                <p>Posted on {{ post.publishedAt|date }}</p>

                <hr>

                <!-- Preview Image -->
                <img class="img-fluid rounded" src="{{ asset('uploads/post/images/' ~ post.image) }}" alt="">

                <hr>

                <!-- Post Content -->
                <p>{{ post.text }}</p>
                <hr>
                <a href="{{ path('post') }}" class="btn btn-info">Back to list</a>

                <a href="{{ path('post_show_comments', {'id': post.id}) }}" class="btn btn-info">Show Comments</a>

                <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-success">Edit</a>

                {{ include('post/_delete_form.html.twig') }}

                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_label(form.content, 'Content')  }}
                        {{ form_widget(form.content, { 'attr': {'class': 'form-control', 'rows': 3}}) }}
                        <br>
                        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Single Comment -->
                {% for comment in post.comments %}
                    <div class="media mb-4">
                        <div class="media-body">
                            <h5 class="mt-0">{{ comment.author.email }}</h5>
                            <span>{{ comment.publishedAt|date }}</span>
                            <p>{{ comment.content }}</p>
                        </div>
                    </div>
                    <hr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </div>
        </div>
        <!-- /.row -->
    </div>
{% endblock %}
