{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Text</th>
            <th>Image</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.text }}</td>
                <td>
                    <img src="{{ asset('uploads/post/images/' ~ post.image) }}" alt="">
                </td>
                <td>{{ post.author.email }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_create') }}" class="btn btn-primary">Create new</a>
{% endblock %}
